<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #2e2e2e;
        display: flex;
        flex-direction: column;
    }

    .wrapper {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        min-height: 100vh;
        overflow-y: auto;
    }

    .stats {
        display: flex;
        justify-content: right;
    }

    .pagination-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .content {
        flex-grow: 1;
        margin-left: 250px;
        overflow-y: auto;
    }

    .footer {
        text-align: right;
        margin-top: auto;
        padding: 10px 0;
    }

    .rarity-container {
        display: flex;
        margin-bottom: 15px;
    }

    .rarity-btn {
        display: flex;
        flex-direction: column;
        white-space: nowrap;
    }

    .response-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .response {
        text-align: center;
        color: white;
        font-weight: bold;
        font-size: x-large;
    }

    h1, h2, h4 {
        color: white;
    }

    .table tbody > tr > td {
        vertical-align: middle;
        text-align: center;
    }

    .table thead th {
        background-color: #2e2e2e;
        color: rgb(255, 255, 255);
        border-bottom: 2px solid #000;
    }

    .table td, .table th {
        border: 1px solid #dee2e6;
    }

    .custom-container {
        width: 95%;
        margin: 0 auto;
    }

    .highlight {
        background-color: #ff7f7f !important;
    }

    .nav-pills .nav-link:hover { 
        background-color: rgba(74, 74, 74, 0.324);
        display: block;
        width: 100%;
    }
    
    .buttoncss {
        color:white;
        background-color: #2436653b;
    }

    .buttoncss:hover {
        color:white;
        background-color: rgba(12, 12, 82, 0.256);
    }

    .csstable {
        border: 2px solid #243665;
    }
    
    .sidebar {
        width: 250px;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        background-color: #272727;
    }

    .countlink {
        color: white;
        width:200px;
        background-color: #243665;
        border-radius: 5px;
        text-align: center;
    }

    .countlink:hover {
        color: white;
        background-color: rgb(12, 12, 82);
    }

    .countlink {
        transition: all 0.5s ease;
    }

    .togglecss {
        border: 2px solid #243665;
    }
    .togglecss:checked {
        border: 2px solid #243665;
        background-color: #8e8bd8;
    }

    .spinnercss {
        color: #243665;
    }

    .nav-link {
        color: white;
    }

    .nav-link.active {
        background: #404040 !important;
    }

    .nav-link:hover {
        color:#8bb3d8
    }

    .form-check-label {
        color: white;
    }

    .pagetitle {
        text-align: center;
        text-decoration: underline;
        padding-top: 20px;
        color: white;
    }
</style>
