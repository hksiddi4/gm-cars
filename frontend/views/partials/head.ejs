<% 
  let customDescription = "View build counts and statistics for GM vehicles.";

  if (typeof vin_data !== 'undefined' && vin_data && vin_data.length > 0) {
      const v = vin_data[0];
      const year = v.modelYear ? v.modelYear : '';
      const model = v.model ? v.model : '';
      const trim = v.trim ? v.trim : '';
      
      customDescription = `View build counts and statistics for ${year} ${model} ${trim}`.trim() + ".";
  }
%>

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="theme-color" content="#515151">
<link rel="icon" href="../../img/gm.png">

<meta name="description" content="<%= customDescription %>">
<meta name="keywords" content="GM, General Motors, build counts, vehicle statistics, Chevrolet, Cadillac, production numbers">
<meta name="robots" content="index, follow">

<link rel="canonical" href="https://www.gmbuildcounts.com<%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">
<meta property="og:title" content="GM Build Counts">
<meta property="og:description" content="<%= customDescription %>">
<meta property="og:type" content="website">
<meta property="og:url" content="https://www.gmbuildcounts.com<%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">
<meta property="og:image" content="https://www.gmbuildcounts.com/img/gm.png">
<meta property="og:site_name" content="GM Build Counts">

<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="GM Build Counts">
<meta name="twitter:description" content="<%= customDescription %>">
<meta name="twitter:image" content="https://www.gmbuildcounts.com/img/gm.png">

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "GM Build Counts",
  "url": "https://www.gmbuildcounts.com",
  "description": "<%= customDescription %>",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://www.gmbuildcounts.com/search?vin={vin}",
    "query-input": "required name=vin"
  }
}
</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "url": "https://www.gmbuildcounts.com",
  "logo": "https://www.gmbuildcounts.com/img/gm.png",
  "name": "GM Build Counts",
  "sameAs": [],
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "customer support",
    "url": "https://www.gmbuildcounts.com"
  }
}
</script>

<% if (typeof pagePath !== 'undefined') { %>

  <% 
    const pathSegment = pagePath.substring(1); 
    const displayTitle = pathSegment.charAt(0).toUpperCase() + pathSegment.slice(1);
  %>
  
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://www.gmbuildcounts.com/"
      }
      <% if (pagePath !== '/') { %>
      ,{
        "@type": "ListItem",
        "position": 2,
        "name": "<%= displayTitle %>",
        "item": "https://www.gmbuildcounts.com<%= pagePath %>"
      }
      <% } %>
    ]
  }
  </script>
  
  <% if (pagePath === '/vehicles') { %>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "url": "https://www.gmbuildcounts.com/vehicles",
    "name": "GM Vehicle Build Counts",
    "description": "View build counts and statistics for all available GM vehicles, including Chevrolet, Cadillac, and more."
  }
  </script>
  <% } else if (pagePath === '/stats') { %>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Dataset",
    "url": "https://www.gmbuildcounts.com/stats",
    "name": "GM Production Statistics Summary",
    "description": "Aggregated statistics and charts on GM vehicle production numbers."
  }
  </script>
  <% } else if (pagePath === '/wheels') { %>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "url": "https://www.gmbuildcounts.com/wheels",
    "name": "GM Wheel Option Codes",
    "description": "Detailed build counts for GM vehicles based on factory wheel RPO codes."
  }
  </script>
  <% } else if (pagePath === '/rpos') { %>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "url": "https://www.gmbuildcounts.com/rpos",
    "name": "GM Regular Production Options (RPOs)",
    "description": "A comprehensive list and build counts for GM Regular Production Option (RPO) codes."
  }
  </script>
  <% } %>

<% } %>

