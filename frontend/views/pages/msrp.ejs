<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <title>Highest MSRPs</title>
</head>
<body>
    <%- include('../partials/sidebar'); %>

    <div class="custom-container">
        <div class="row">
            <h1 class="pagetitle">Highest MSRPs</h1>
        </div>
        <div class="row">
            <!-- Filters -->
            <div class="col-md-12 mb-3">
                <h4>Filter</h4>
                <form id="filterForm">
                    <% models.forEach(function(model) { %>
                        <div class="form-check">
                            <input 
                                class="form-check-input" 
                                type="checkbox" 
                                id="model_<%= model %>" 
                                value="<%= model %>"
                                <%= selectedModels.includes(model) ? 'checked' : '' %>
                            >
                            <label class="form-check-label" for="model_<%= model %>">
                                <%= model %>
                            </label>
                        </div>
                    <% }) %>
                    <button type="submit" class="btn btn-primary mt-2">Apply Filters</button>
                </form>
            </div>
        <div class="stats">
            <!-- Dropdown and Total -->
            <div class="col-md-2">
                <div class="row">
                    <div class="total-container" style="display: flex;">
                        <p style="color: rgb(103, 103, 103);">Retrieved <%= totalItems %> vehicles</p>
                    </div>
                </div>
            </div>
            <div>
                <div class="row">
                    <div class="dropdown-container" style="margin-bottom: 15px;">
                        <select id="limitSelect" class="form-select">
                            <option value="100" <% if (limit === 100) { %>selected<% } %>>100</option>
                            <option value="150" <% if (limit === 150) { %>selected<% } %>>150</option>
                            <option value="200" <% if (limit === 200) { %>selected<% } %>>200</option>
                            <option value="250" <% if (limit === 250) { %>selected<% } %>>250</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
            
            <!-- Top MSRP Table -->
            <div class="table-responsive">
                <% if (locals.msrp_data) { %>
                <table class="table table-sm table-hover border border shadow" id="allTable">
                    <thead>
                        <tr>
                            <th scope="col">VIN</th>
                            <th scope="col">Year</th>
                            <th scope="col">Model</th>
                            <th scope="col">Body</th>
                            <th scope="col">Trim</th>
                            <th scope="col">Engine</th>
                            <th scope="col">Transmission</th>
                            <th scope="col">Drivetrain</th>
                            <th scope="col">Exterior Color</th>
                            <th scope="col">MSRP</th>
                            <th scope="col">Country</th>
                            <th scope="col">Dealer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.msrp_data.forEach(function(data) { %>
                            <tr style="cursor: pointer;" onmousedown="handleMouseDown(event);" data-url="/search?vin=<%= data.vin %>">
                                <td scope="row"><%= data.vin %></td>
                                <td scope="row"><%= data.modelYear %></td>
                                <td scope="row"><%= data.model %></td>
                                <td scope="row"><%= data.body %></td>
                                <td scope="row"><%= data.trim %></td>
                                <td scope="row"><%= data.vehicleEngine %></td>
                                <td scope="row"><%= data.transmission %></td>
                                <td scope="row"><%= data.drivetrain %></td>
                                <td scope="row"><%= data.exterior_color %></td>
                                <td scope="row" style="text-align: right;"><%= data.msrp %></td>
                                <td scope="row">
                                    <% 
                                    if (data.location) {
                                        const locationParts = data.location.split(',');
                                        if (locationParts.length > 1) {
                                            const state = locationParts[1].trim().split(' ')[0];
                                            if (["AB", "BC", "MB", "NB", "NF", "NS", "NT", "ON", "PE", "PQ", "SK"].includes(state)) { %>
                                                <img src="../img/canada_flag.png" alt="Canada" width="20">
                                            <% } else { %>
                                                <img src="../img/usa_flag.png" alt="USA" width="20">
                                            <% }
                                        } else { %>
                                            <img src="../img/mexico_flag.png" alt="Mexico" width="20">
                                        <% }
                                    } else { %>
                                        <img src="../img/mexico_flag.png" alt="Mexico" width="20">
                                    <% } %>
                                </td>
                                <td scope="row"><%= data.dealer || 'N/A' %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <!-- Pagination -->
                 <div class="pagination-wrapper">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <!-- First Page -->
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=1&limit=<%= limit %>&model=<%= selectedModels.join(',') %>">First</a>
                                </li>
                            <% } %>

                            <!-- Previous Page -->
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>&model=<%= selectedModels.join(',') %>">Previous</a>
                                </li>
                            <% } %>

                            <!-- Page Numbers -->
                            <% 
                            const pageRange = 10; // Number of pages to show around the current page
                            let startPage = Math.max(1, currentPage - Math.floor(pageRange / 2));
                            let endPage = Math.min(totalPages, currentPage + Math.floor(pageRange / 2));

                            if (currentPage - Math.floor(pageRange / 2) < 1) {
                                endPage = Math.min(totalPages, endPage + (1 - (currentPage - Math.floor(pageRange / 2))));
                            }

                            if (currentPage + Math.floor(pageRange / 2) > totalPages) {
                                startPage = Math.max(1, startPage - ((currentPage + Math.floor(pageRange / 2)) - totalPages));
                            }
                            %>
                            <% for (let i = startPage; i <= endPage; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>&model=<%= selectedModels.join(',') %>"><%= i %></a>
                                </li>
                            <% } %>

                            <!-- Next Page -->
                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>&model=<%= selectedModels.join(',') %>">Next</a>
                                </li>
                            <% } %>

                            <!-- Last Page -->
                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= totalPages %>&limit=<%= limit %>&model=<%= selectedModels.join(',') %>">Last</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                 </div>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('../partials/footer'); %>
    <script>
        let startX;

        function handleMouseDown(event) {
            startX = event.clientX;
        }

        function handleRowClick(url) {
            const distance = Math.abs(event.clientX - startX);
            if (distance > 5) {
                return;
            }
            window.location.href = url;
        }

        function handleContextMenu(event, url) {
            event.preventDefault(); // Prevent the default context menu
            window.location.href = url;
        }

        document.addEventListener('DOMContentLoaded', function() {
            const filterForm = document.getElementById('filterForm');
            const limitSelect = document.getElementById('limitSelect');

            limitSelect.addEventListener('change', function(event) {
                const newLimit = event.target.value;
                const queryParams = new URLSearchParams(window.location.search);
                queryParams.set('limit', newLimit);
                window.location.search = queryParams.toString();
            });

            filterForm.addEventListener('submit', function(event) {
                event.preventDefault();
                
                const checkboxes = filterForm.querySelectorAll('input[type="checkbox"]');
                const selectedOptions = Array.from(checkboxes)
                                             .filter(checkbox => checkbox.checked)
                                             .map(checkbox => checkbox.value);

                const queryString = selectedOptions.map(option => `model=${option}`).join('&');
                const limit = limitSelect.value;
                const url = `/msrp?${queryString}`;
                window.location.href = url;
            });

            limitSelect.addEventListener('change', function() {
                const limit = limitSelect.value;
                const url = new URL(window.location.href);
                url.searchParams.set('limit', limit);
                window.location.href = url.toString();
            });

            document.querySelectorAll('#allTable tbody tr').forEach(row => {
                const url = row.getAttribute('data-url');
                row.addEventListener('mousedown', handleMouseDown);
                row.addEventListener('click', (event) => handleRowClick(url, event));
            });
        });
    </script>
</body>
</html>
