<header style="padding: 10px 0; background-color: transparent;">
    <div class="header-background"></div>
    <div class="container-fluid" style="height: 100%; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">
        <div class="d-flex align-items-center" style="height: 100%;">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation" style="border: none; background: transparent; color: white; font-weight: bold;">
                â˜°
            </button>
            <h1 id="site-title" class="text-white mb-1">
                <a href="/" class="text-white" style="text-decoration: none;">GM 2020+ Build Counts</a>
            </h1>
        </div>
        <div class="collapse" id="sidebar">
            <ul class="nav flex-column mt-2">
                <li class="nav-item mb-3">
                    <form id="searchVIN" action="/search" method="GET" class="d-flex mt-3">
                        <input type="text" id="searchInput" name="vin" class="form-control" placeholder="Search VIN...">
                        <button type="submit" class="btn btn-secondary ms-2">Search</button>
                    </form>
                </li>
                <li class="nav-item mb-2">
                    <a href="/vehicles" class="nav-link">
                        <i class="fs-4 bi bi-car-front-fill me-2"></i>
                        Vehicles
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/stats" class="nav-link">
                        <i class="fs-4 bi bi-list-ol me-2"></i>
                        Stats
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var imageURLs = [
            '../img/header/camaro_header_1.png',
            '../img/header/camaro_header_2.png',
            '../img/header/camaro_header_3.png',
            '../img/header/camaro_header_4.png',
            '../img/header/camaro_header_5.png',
            '../img/header/camaro_header_6.png',
            '../img/header/camaro_header_7.png',
            '../img/header/ct4_header_1.png',
            '../img/header/ct4_header_2.png',
            '../img/header/ct5_header_1.png',
            '../img/header/ct5_header_2.png',
        ];

        var randomIndex = Math.floor(Math.random() * imageURLs.length);

        document.querySelector('.header-background').style.backgroundImage = 'url(' + imageURLs[randomIndex] + ')';

        var path = window.location.pathname;
        var navLinks = document.querySelectorAll('.nav-link');

        navLinks.forEach(function(link) {
            if (link.getAttribute('href') === path) {
                link.classList.add('active');
            } else {
                link.classList.remove('active');
            }
        });
    });
</script>
